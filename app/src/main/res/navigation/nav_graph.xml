<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/AlbumFragment">

    <fragment
        android:id="@+id/AlbumFragment"
        android:name="com.grnt.musictestjava.ui.AlbumFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_album">

        <action
            android:id="@+id/action_AlbumFragment_to_SongListFragment"
            app:destination="@id/SongListFragment" />
    </fragment>
    <fragment
        android:id="@+id/SongListFragment"
        android:name="com.grnt.musictestjava.ui.SongListFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_songlist">

        <action
            android:id="@+id/action_SongListFragment_to_AlbumFragment"
            app:destination="@id/AlbumFragment" />
    </fragment>
</navigation>